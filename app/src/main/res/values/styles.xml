<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Apptheme_titlebar" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_apptheme_titlebar</item>
        <item name="popupMenuStyle">@style/PopupMenu.Apptheme_titlebar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Apptheme_titlebar</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Apptheme_titlebar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Apptheme_titlebar</item>
        <item name="actionBarStyle">@style/ActionBar.Transparent.Apptheme_titlebar</item>
        <item name="actionModeBackground">@drawable/cab_background_top_apptheme_titlebar</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_apptheme_titlebar</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Apptheme_titlebar</item>
    </style>
    <style name="ActionBar.Solid.Apptheme_titlebar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_apptheme_titlebar</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_apptheme_titlebar</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_apptheme_titlebar</item>
        <item name="progressBarStyle">@style/ProgressBar.Apptheme_titlebar</item>
    </style>
    <style name="ActionBar.Transparent.Apptheme_titlebar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_apptheme_titlebar</item>
        <item name="progressBarStyle">@style/ProgressBar.Apptheme_titlebar</item>
    </style>

    <style name="PopupMenu.Apptheme_titlebar" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_apptheme_titlebar</item>
    </style>

    <style name="DropDownListView.Apptheme_titlebar" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_apptheme_titlebar</item>
    </style>

    <style name="ActionBarTabStyle.Apptheme_titlebar" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_apptheme_titlebar</item>
    </style>

    <style name="DropDownNav.Apptheme_titlebar" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_apptheme_titlebar</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_apptheme_titlebar</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_apptheme_titlebar</item>
    </style>

    <style name="ProgressBar.Apptheme_titlebar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_apptheme_titlebar</item>
    </style>

    <style name="ActionButton.CloseMode.Apptheme_titlebar" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_apptheme_titlebar</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Apptheme_titlebar.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Apptheme_titlebar</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Apptheme_titlebar</item>
    </style>
    <style name="style_ble_set_tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/tv_title_color</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="style_dialog_index">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/FireBrick</item>
    </style>
</resources>
