<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.syncworks.slight.BleSetActivity"
    android:background="@color/Main_Background_Color">

    <RelativeLayout
        android:id="@+id/cur_device_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/background_view_rounded_single">
        <!--EditText 의 자동 포커스 막기 추가-->
        <TextView
            style="@style/style_ble_set_tv_title"
            android:id="@+id/tv_cur_device_title"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:text="@string/tv_cur_device_title"/>
        <TextView
            android:id="@+id/cur_device_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/Black"
            android:layout_below="@id/tv_cur_device_title"
            android:text="@string/cur_device_name"/>
        <TextView
            android:id="@+id/cur_device_address_lt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/Black"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/cur_device_name"
            android:layout_alignBottom="@id/cur_device_name"
            android:text="@string/lt"/>
        <TextView
            android:id="@+id/cur_device_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/Black"
            android:layout_toEndOf="@id/cur_device_address_lt"
            android:layout_alignBottom="@id/cur_device_address_lt"
            android:text="@string/cur_device_addr"/>
        <TextView
            android:id="@+id/cur_device_address_gt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/Black"
            android:layout_toEndOf="@id/cur_device_address"
            android:layout_alignBottom="@id/cur_device_address"
            android:text="@string/gt"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/menu_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#000000">
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@drawable/btn_bottom_menu"
            android:drawableStart="@drawable/ic_action_back"
            android:textSize="14sp"
            android:textColor="@color/White"
            android:text="@string/btn_back"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_bottom_menu"
            android:drawableStart="@drawable/ic_action_save"
            android:textSize="14sp"
            android:textColor="@color/White"
            android:text="@string/btn_save"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_bottom_menu"
            android:drawableStart="@drawable/ic_action_edit"
            android:textSize="14sp"
            android:textColor="@color/White"
            android:text="@string/btn_edit"
            android:onClick="onClick"/>
    </RelativeLayout>
    <!--<LinearLayout
        android:id="@+id/radio_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/menu_rl"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/background_view_rounded_single"
        android:visibility="gone">
        <TextView
            style="@style/style_ble_set_tv_title"
            android:id="@+id/tv_radio_strength"
            android:text="@string/tv_radio_strength"/>
        <Spinner
            android:id="@+id/spinner_radio_strength"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>-->
    <LinearLayout
        android:id="@+id/device_name_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_above="@id/menu_rl"
        android:background="@drawable/background_view_rounded_single"
        android:visibility="gone">
        <TextView
            style="@style/style_ble_set_tv_title"
            android:id="@+id/tv_device_name"
            android:text="@string/tv_device_name"/>
        <EditText
            android:id="@+id/et_device_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="@string/hint_device_name"
            android:textColorHint="@color/Main_Background_Color"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/device_list_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cur_device_rl"
        android:layout_above="@id/device_name_ll"
        android:padding="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/background_view_rounded_single">
        <Button
            android:id="@+id/btn_ble_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_gradient_black"
            android:textColor="@color/White"
            android:text="@string/btn_ble_stop"
            android:onClick="onClick"/>
        <TextView
            style="@style/style_ble_set_tv_title"
            android:id="@+id/tv_device_list_title"
            android:layout_alignBottom="@id/btn_ble_scan"
            android:text="@string/tv_device_list_title"/>
        <ListView
            android:id="@+id/list_device"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_ble_scan"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="5dp"/>
    </RelativeLayout>
</RelativeLayout>
