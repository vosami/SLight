<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.syncworks.slight.fragments.ColorAlwaysOn">
    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOff="간편 색깔 선택 모드"
        android:textOn="색상표 선택 모드"/>
    <TableLayout
        android:id="@+id/easy_table"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Row 0-->
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/easy_color_0"
                android:background="@color/easy_color_0_red"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/easy_color_1"
                android:background="@color/easy_color_1_orange"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/easy_color_2"
                android:background="@color/easy_color_2_yellow"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/easy_color_3"
                android:background="@color/easy_color_3_green"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/easy_color_4"
                android:background="@color/easy_color_4_blue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

        </TableRow>
        <TableRow
            android:layout_weight="1">
            <Button
                android:id="@+id/easy_color_5"
                android:background="@color/easy_color_5_navy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/easy_color_6"
                android:background="@color/easy_color_6_purple"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/easy_color_7"
                android:background="@color/easy_color_7_black"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/easy_color_8"
                android:background="@color/easy_color_8_white"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/easy_color_9"
                android:background="@color/easy_color_9_pink"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </TableRow>
    </TableLayout>
    <com.syncworks.colorpickerview.ColorPickerView
        android:id="@+id/color_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
</LinearLayout>
