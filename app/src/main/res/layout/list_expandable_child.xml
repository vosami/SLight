<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            style="@style/ButtonBlackText"
            android:id="@+id/btn_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/easy_effect_option_start_time"/>
        <Button
            style="@style/ButtonBlackText"
            android:id="@+id/btn_pattern_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/easy_effect_option_pattern_time"/>
        <Button
            style="@style/ButtonBlackText"
            android:id="@+id/btn_random_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/easy_effect_option_random_time"/>
        <Button
            style="@style/ButtonBlackText"
            android:id="@+id/btn_pattern_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/easy_effect_option_pattern_option"/>
        <Button
            style="@style/ButtonBlackText"
            android:id="@+id/btn_pattern_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/easy_effect_option_type"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/ll_start_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <ProgressBar
                android:id="@+id/progressbar_start_time"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="200"
                android:progress="0"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_effect_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp">
            <View
                android:id="@+id/effect_step_0"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Blue"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/effect_step_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Blue"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/effect_step_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Blue"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/effect_step_3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Blue"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/effect_step_4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Blue"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_random_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <View
                android:id="@+id/random_step_0"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/MediumVioletRed"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/random_step_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/MediumVioletRed"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/random_step_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/MediumVioletRed"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/random_step_3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/MediumVioletRed"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/random_step_4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/MediumVioletRed"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pattern_option"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <View
                android:id="@+id/option_step_0"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/DarkSeaGreen"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/option_step_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/DarkSeaGreen"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/option_step_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/DarkSeaGreen"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/option_step_3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/DarkSeaGreen"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <View
                android:id="@+id/type_0"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Lime"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/type_1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Lime"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/type_2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Lime"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/type_3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Lime"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
            <View
                android:id="@+id/type_4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="@color/Lime"
                android:layout_weight="1"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>