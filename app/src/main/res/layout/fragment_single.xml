<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.syncworks.slight.fragments.SingleFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/title_effect_ratio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LED 효과 시간 비율: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/title_effect_ratio"
            android:text="1배"/>
        <Button
            android:id="@+id/btn_effect_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/title_effect_ratio"
            android:background="@drawable/btn_minus"/>
        <Button
            android:id="@+id/btn_effect_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/title_effect_ratio"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_plus"/>
        <SeekBar
            android:id="@+id/seekbar_effect_ratio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_effect_ratio"
            android:layout_toEndOf="@id/btn_effect_minus"
            android:layout_toStartOf="@id/btn_effect_plus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbar_effect_ratio"
            android:layout_alignStart="@id/seekbar_effect_ratio"
            android:text="0배"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbar_effect_ratio"
            android:layout_alignEnd="@id/seekbar_effect_ratio"
            android:text="10배"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/title_start_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="시작 지연 시간: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/title_start_delay"
            android:text="0.01초"/>
        <Button
            android:id="@+id/btn_start_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/title_start_delay"
            android:background="@drawable/btn_minus"/>
        <Button
            android:id="@+id/btn_start_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/title_start_delay"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_plus"/>
        <SeekBar
            android:id="@+id/seekbar_start_delay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_start_delay"
            android:layout_toEndOf="@id/btn_start_minus"
            android:layout_toStartOf="@id/btn_start_plus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbar_start_delay"
            android:layout_alignStart="@id/seekbar_start_delay"
            android:text="0.01초"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbar_start_delay"
            android:layout_alignEnd="@id/seekbar_start_delay"
            android:text="20초"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
        <TextView
            android:id="@+id/title_end_delay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="종료 지연 시간: "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/title_end_delay"
            android:text="0.01초"/>
        <Button
            android:id="@+id/btn_end_minus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/title_end_delay"
            android:background="@drawable/btn_minus"/>
        <Button
            android:id="@+id/btn_end_plus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/title_end_delay"
            android:layout_alignParentEnd="true"
            android:background="@drawable/btn_plus"/>
        <SeekBar
            android:id="@+id/seekbar_end_delay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title_end_delay"
            android:layout_toEndOf="@id/btn_end_minus"
            android:layout_toStartOf="@id/btn_end_plus"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbar_end_delay"
            android:layout_alignStart="@id/seekbar_end_delay"
            android:text="0.01초"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/seekbar_end_delay"
            android:layout_alignEnd="@id/seekbar_end_delay"
            android:text="20초"/>
    </RelativeLayout>

</LinearLayout>
