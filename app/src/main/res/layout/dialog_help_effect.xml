<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/overlay_help"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_help_first"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:text="1. LED 효과를 선택하고 아래 옵션을 이용하여 적용할 효과를 선택합니다."/>
    <TextView
        android:layout_below="@id/tv_help_first"
        android:id="@+id/tv_help_option1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:text="시작 시간 옵션 : 효과 시작 전 대기 시간 설정 - 0~10초 설정 가능"/>
    <TextView
        android:id="@+id/tv_help_option2"
        android:layout_below="@id/tv_help_option1"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:text="효과 시간 옵션 : LED 효과가 얼마나 지속될지 설정 - 5단계 설정 가능"/>
    <TextView
        android:id="@+id/tv_help_option3"
        android:layout_below="@id/tv_help_option2"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:textColor="@color/White"
        android:text="랜덤 시간 옵션 : 효과의 마지막에 랜덤 지연 시간 설정 - 5단계 설정 가능"/>
    <TextView
        android:layout_alignParentBottom="true"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/White"
        android:text="3. 다른 LED의 효과를 적용하려면 '다른 LED선택'버튼을 누르고, 저장하려면 '5단계'버튼을 누릅니다."/>

</RelativeLayout>