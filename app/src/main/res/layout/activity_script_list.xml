<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    tools:context="com.syncworks.slight.ScriptListActivity">

    <LinearLayout
        android:id="@+id/ll_script_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_add_script"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="더하기"
            android:layout_weight="1"
            android:onClick="scriptClick"/>
        <Button
            android:id="@+id/btn_test_script"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="완료"
            android:layout_weight="1"
            android:onClick="scriptClick"/>
    </LinearLayout>
    <com.syncworks.dragndroplist.DragSortListView
        android:id="@+id/lv_script_list"
        android:layout_alignParentTop="true"
        android:layout_above="@id/ll_script_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:drag_enabled="true"
        app:collapsed_height="2dp"
        app:drag_scroll_start="0.33"
        app:max_drag_scroll_speed="0.5"
        app:float_alpha="0.6"
        app:slide_shuffle_speed="0.3"
        app:track_drag_sort="false"
        app:use_default_controller="false"/>
</RelativeLayout>
