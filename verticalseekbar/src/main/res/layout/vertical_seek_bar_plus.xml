<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent">
    <TextView
        android:id="@+id/v_view_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:text="Title"/>
    <TextView
        android:id="@+id/v_val_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/v_view_title"
        android:text="Value"/>
    <Button
        android:id="@+id/v_btn_plus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/v_val_tv"
        android:textSize="20sp"
        android:textColor="#FF000000"
        android:background="@android:drawable/arrow_up_float"/>
    <Button
        android:id="@+id/v_btn_minus"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:textSize="20sp"
        android:textColor="#FF000000"
        android:background="@android:drawable/arrow_down_float"/>
    <com.syncworks.verticalseekbar.VerticalSeekBar
        android:id="@+id/v_seekbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/v_btn_plus"
        android:layout_above="@id/v_btn_minus"
        android:progressDrawable="@drawable/progressbar"/>
    <TextView
        android:id="@+id/v_max_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_toRightOf="@id/v_seekbar"
        android:layout_alignTop="@id/v_seekbar"
        android:text="maxVal"/>
    <TextView
        android:id="@+id/v_min_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_toRightOf="@id/v_seekbar"
        android:layout_alignBottom="@id/v_seekbar"
        android:text="minVal"/>
</merge>