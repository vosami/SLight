<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="cled_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/size_of_connector_txt</item>
        <item name="android:textColor">@color/color_of_connector_txt</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="sled_txt_style" parent="cled_txt_style">
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="sled_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_connector_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text"></item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_connector</item>
    </style>
    <style name="cled_btn_style" parent="sled_btn_style">
        <item name="android:background">@drawable/selector_connector_disable</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>
</resources>
